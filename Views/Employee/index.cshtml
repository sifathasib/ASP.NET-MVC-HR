<div class="text-center">


    <h2>Employees</h2>

    <table  id="employeeTable" class="display">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EMPLOYEE_ID</td>
                    <td>@employee.FIRST_NAME</td>
                    <td>@employee.LAST_NAME</td>
                    <td>@employee.EMAIL</td>
                </tr>
            }
        </tbody>
    </table>
</div>
